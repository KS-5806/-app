<%= form_with model: board, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 10 %>
  </div>
  <div class="form-group">
    <%= f.label :board_image %>
    <% if @board.board_image.present? %>
      <%= image_tag @board.board_image.url, class: 'card-img-top', id: :img_prev %>
    <% else %>
      <%= image_tag 'board_placeholder.png', class: 'card-img-top', id: :img_prev %>
    <% end %>
    <%= f.file_field :board_image, class: 'form-control mb-3', accept: 'image/jpg, image/jpeg, image/gif, image/png, video/*', onchange: 'previewImage(preview)' %>
    <%= f.hidden_field :board_image_cache %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>